int
socket_read
(
Socket_T
S
,
void
*
b
,
int
size
)
{
int
n
=
0
;
void
*
p
=
b
;
int
timeout
=
0
;
ASSERT
(
S
)
;
timeout
=
S
->
timeout
;
while
(
size
>
0
)
{
if
(
S
->
ssl
)
{
n
=
recv_ssl_socket
(
S
->
ssl
,
p
,
size
,
timeout
)
;
}
else
{
n
=
sock_read
(
S
->
socket
,
p
,
size
,
