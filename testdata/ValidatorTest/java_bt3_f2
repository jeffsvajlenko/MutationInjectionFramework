    {
        Figure figure = drawing().findFigure(e.getX(), e.getY());
        if (figure != null)
        {
            figure = figure.getDecoratedFigure();
            if (figure instanceof CompositeFigure)
            {
                setContainerFigure((CompositeFigure)figure);
                super.mouseDown(e, x, y);
            }
            else
            {
                toolDone();
            }
        }
        else
        {
            toolDone();
        }
    }