#!/bin/bash
# $1 = system directory
# $2 = language {java, c, cs, py}
# $3 = frameowkr install dir
# $4 = tool dir
# $5 = fragmnet type (function|block)
# $6 = tool runner directory
# $7 = minlines

sysdir=$1
language=$2
opts="-ignoreIdentifiers+ -ignoreLiterals+ -ignoreVariableNames+ -threshold=10"
#opts="-ignoreIdentifiers+ -ignoreLiterals+ -ignoreModifiers+ -ignoreVariableNames+"
installdir=$4
outfile=$6/clones.txt
memory="-Xms250m -Xmx1028m"
cd $6
java -jar SimianRunner.jar $sysdir $installdir $language "$opts" "$memory" $outfile
